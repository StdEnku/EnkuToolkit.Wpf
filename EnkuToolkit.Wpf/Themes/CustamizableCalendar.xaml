<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:controls="clr-namespace:EnkuToolkit.Wpf.Controls"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="controls:CustamizableCalendar">
        <Setter Property="DayOfWeekSource">
            <Setter.Value>
                <x:Array Type="{x:Type sys:String}">
                    <sys:String>Sun</sys:String>
                    <sys:String>Mon</sys:String>
                    <sys:String>Tue</sys:String>
                    <sys:String>Wed</sys:String>
                    <sys:String>Thu</sys:String>
                    <sys:String>Fri</sys:String>
                    <sys:String>Sat</sys:String>
                </x:Array>
            </Setter.Value>
        </Setter>

        <Setter Property="DayOfWeekTemplate">
            <Setter.Value>
                <DataTemplate DataType="sys:String" >
                    <Label Content="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:CustamizableCalendar">
                    <DockPanel LastChildFill="True">
                        <!--#region 曜日表示エリア-->
                        <Grid DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <ContentControl Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DayOfWeekSource[0]}" ContentTemplate="{TemplateBinding DayOfWeekTemplate}">
                                <Control.Style>
                                    <Style TargetType="Control">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="True">
                                                <Setter Property="Grid.Column" Value="6" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="False">
                                                <Setter Property="Grid.Column" Value="0" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Control.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DayOfWeekSource[1]}" ContentTemplate="{TemplateBinding DayOfWeekTemplate}">
                                <Control.Style>
                                    <Style TargetType="Control">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="True">
                                                <Setter Property="Grid.Column" Value="0" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="False">
                                                <Setter Property="Grid.Column" Value="1" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Control.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DayOfWeekSource[2]}" ContentTemplate="{TemplateBinding DayOfWeekTemplate}">
                                <Control.Style>
                                    <Style TargetType="Control">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="True">
                                                <Setter Property="Grid.Column" Value="1" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="False">
                                                <Setter Property="Grid.Column" Value="2" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Control.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DayOfWeekSource[3]}" ContentTemplate="{TemplateBinding DayOfWeekTemplate}">
                                <Control.Style>
                                    <Style TargetType="Control">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="True">
                                                <Setter Property="Grid.Column" Value="2" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="False">
                                                <Setter Property="Grid.Column" Value="3" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Control.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DayOfWeekSource[4]}" ContentTemplate="{TemplateBinding DayOfWeekTemplate}">
                                <Control.Style>
                                    <Style TargetType="Control">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="True">
                                                <Setter Property="Grid.Column" Value="3" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="False">
                                                <Setter Property="Grid.Column" Value="4" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Control.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DayOfWeekSource[5]}" ContentTemplate="{TemplateBinding DayOfWeekTemplate}">
                                <Control.Style>
                                    <Style TargetType="Control">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="True">
                                                <Setter Property="Grid.Column" Value="4" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="False">
                                                <Setter Property="Grid.Column" Value="5" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Control.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DayOfWeekSource[6]}" ContentTemplate="{TemplateBinding DayOfWeekTemplate}">
                                <Control.Style>
                                    <Style TargetType="Control">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="True">
                                                <Setter Property="Grid.Column" Value="5" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsStartWeekMonday}" Value="False">
                                                <Setter Property="Grid.Column" Value="6" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Control.Style>
                            </ContentControl>
                        </Grid>
                        <!--#endregion-->

                        <Viewbox DockPanel.Dock="Bottom">
                            <Label Content="カレンダー" />
                        </Viewbox>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
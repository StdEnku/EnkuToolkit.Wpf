<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:controls="clr-namespace:EnkuToolkit.Wpf.Controls"
                    xmlns:internal="clr-namespace:EnkuToolkit.Wpf.Controls.Internals.CustamizableCalendar"
                    xmlns:datas="clr-namespace:EnkuToolkit.UiIndependent.CustamizableCalendarDatas;assembly=EnkuToolkit.UiIndependent"
                    xmlns:me="clr-namespace:EnkuToolkit.Wpf.MarkupExtensions"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="controls:CustamizableCalendar">
        <!--#region プロパティの初期値指定用セッター群-->
        <Setter Property="DayOfWeekTemplate">
            <Setter.Value>
                <DataTemplate DataType="datas:DayOfWeekSource" >
                    <Label Content="{Binding Text}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                        
                        <Label.Style>
                            <Style TargetType="Label" BasedOn="{me:GetApplicationResource {x:Type Label}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsHoliday}" Value="True">
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>    
                        </Label.Style>
                    </Label>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="CellTemplate">
            <Setter.Value>
                <DataTemplate DataType="datas:CalendarSource">
                    <Border CornerRadius="10" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                        <Label Content="{Binding Date.Day}" />

                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsToday}" Value="True">
                                        <Setter Property="Background" Value="ForestGreen" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="AutoGenCellTemplate">
            <Setter.Value>
                <DataTemplate DataType="datas:CalendarSource">
                    <Border CornerRadius="10" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                        <Label Content="{Binding Date.Day}" />

                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsToday}" Value="True">
                                        <Setter Property="Background" Value="ForestGreen" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <!--#endregion-->

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:CustamizableCalendar">
                    <DockPanel LastChildFill="True">
                        <DockPanel.Resources>
                            <internal:DayOfWeekSourceToItemsSourceConverter x:Key="DayOfWeekSourceToItemsSourceConverter"/>
                            <internal:SourceToItemsConverter x:Key="SourceToItemsConverter" />
                        </DockPanel.Resources>

                        <!--#region ヘッダー-->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    DockPanel.Dock="Top">

                            <Button Content="▼" FontSize="20" Margin="5" Command="{TemplateBinding ToLastMonthButtonCommand}" />
                            <Label Content="{TemplateBinding TargetYearAndMonth}" FontSize="40" Padding="0" />
                            <Button Content="▲" FontSize="20" Margin="5" Command="{TemplateBinding ToNextMonthButtonCommand}" />

                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsShowHeader}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=IsShowHeader}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                        </StackPanel>
                        <!--#endregion-->

                        <!--region 曜日表示行-->
                        <ItemsControl DockPanel.Dock="Top"
                                      ItemTemplate="{TemplateBinding DayOfWeekTemplate}">
                            <ItemsControl.ItemsSource>
                                <MultiBinding Converter="{StaticResource DayOfWeekSourceToItemsSourceConverter}">
                                    <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="DayOfWeekSource"/>
                                    <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="IsStartWeekMonday" />
                                </MultiBinding>
                            </ItemsControl.ItemsSource>

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="7"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                        <!--#endregion-->

                        <!--#region カレンダーセル-->
                        <ListBox DockPanel.Dock="Bottom">
                            <ListBox.ItemsSource>
                                <MultiBinding Converter="{StaticResource SourceToItemsConverter}">
                                    <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="Source"/>
                                    <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="IsStartWeekMonday" />
                                    <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="CellTemplate" />
                                    <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="AutoGenCellTemplate" />
                                    <Binding RelativeSource="{RelativeSource Mode=TemplatedParent}" Path="TargetYearAndMonth" />
                                </MultiBinding>
                            </ListBox.ItemsSource>

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="7" Rows="6" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{me:GetApplicationResourceExtension {x:Type ListBoxItem}}">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
                                    <Setter Property="Content" Value="{Binding}" />
                                    <Setter Property="ContentTemplate" Value="{Binding TargetTemplate}" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <!--#endregion-->
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
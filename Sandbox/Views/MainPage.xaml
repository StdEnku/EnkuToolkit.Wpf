<Page x:Class="Sandbox.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sandbox.Views"
      xmlns:et="https://github.com/StdEnku/EnkuToolkit"
      xmlns:vm="clr-namespace:Sandbox.ViewModels"
      DataContext="{et:ViewModelProvider vm:MainPageViewModel}"
      d:DataContext="{d:DesignInstance vm:MainPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <DockPanel LastChildFill="True">
        <DockPanel.Resources>
            <et:TernaryOperatorConverter x:Key="labelBackGroundConverter" ResultValueIfTrue="Red" ResultValueIfFalse="Transparent" />
        </DockPanel.Resources>
        
        <Button Command="{Binding ClickedCommand}" Content="Navigate" DockPanel.Dock="Bottom" Margin="10" />

        <Viewbox DockPanel.Dock="Top">
            <Label Content="MainPage" Background="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsMouseOver, Converter={StaticResource labelBackGroundConverter}}" />
        </Viewbox>
    </DockPanel>
</Page>

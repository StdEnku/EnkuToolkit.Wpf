<Page x:Class="Sandbox.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sandbox.Views"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:vm="clr-namespace:Sandbox.ViewModels"
      xmlns:et="https://github.com/StdEnku/EnkuToolkit"
      DataContext="{et:ViewModelProvider vm:Page1ViewModel}"
      d:DataContext="{d:DesignInstance vm:Page1ViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <DockPanel LastChildFill="True">
        <CheckBox Content="IsStartWeekMonday" Name="cb" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="10" />

        <et:CustamizableCalendar IsStartWeekMonday="{Binding ElementName=cb, Path=IsChecked}" DockPanel.Dock="Bottom">
            <et:CustamizableCalendar.DayOfWeekSource>
                <et:CalendarDayOfWeekSource TargetDayOfWeek="Sunday" Text="日" />
                <et:CalendarDayOfWeekSource TargetDayOfWeek="Monday" Text="月" />
                <et:CalendarDayOfWeekSource TargetDayOfWeek="Tuesday" Text="火" />
                <et:CalendarDayOfWeekSource TargetDayOfWeek="Wednesday" Text="水" />
                <et:CalendarDayOfWeekSource TargetDayOfWeek="Thursday" Text="木" />
                <et:CalendarDayOfWeekSource TargetDayOfWeek="Friday" Text="金" />
                <et:CalendarDayOfWeekSource TargetDayOfWeek="Saturday" Text="土" />
            </et:CustamizableCalendar.DayOfWeekSource>

            <et:CustamizableCalendar.Source>
                <et:CalendarSource Date="2023/03/1" />
            </et:CustamizableCalendar.Source>
        </et:CustamizableCalendar>
    </DockPanel>
</Page>

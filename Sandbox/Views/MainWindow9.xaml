<Window x:Class="Sandbox.Views.MainWindow9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sandbox.Views"
        xmlns:vm="clr-namespace:Sandbox.ViewModels"
        xmlns:et="https://github.com/StdEnku/EnkuToolkit"
        mc:Ignorable="d"
        Title="MainWindow9" Height="450" Width="800">

    <DockPanel LastChildFill="True">

        <Button Content="show" Command="{Binding ClickedCommand}"  DockPanel.Dock="Bottom" />

        <ListBox DockPanel.Dock="Top" 
                 SelectionMode="Extended"
                 et:ListBoxExtensionBehavior.SelectedContents="{Binding Selecteds}">
            <ListBoxItem>リンゴ</ListBoxItem>
            <ListBoxItem>みかん</ListBoxItem>
            <ListBoxItem>バナナ</ListBoxItem>
            <ListBoxItem>パイナップル</ListBoxItem>
            <ListBoxItem>キウイ</ListBoxItem>
            <ListBoxItem>桃</ListBoxItem>
        </ListBox>
    </DockPanel>
</Window>

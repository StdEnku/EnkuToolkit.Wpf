<Page x:Class="Sandbox.Views.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sandbox.Views"
      xmlns:vm="clr-namespace:Sandbox.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Page.DataContext>
        <vm:Page2ViewModel />
    </Page.DataContext>

    <DockPanel LastChildFill="True">
        <UniformGrid DockPanel.Dock="Bottom" Columns="4">
            <Button Content="toPage1" Margin="10" Click="toPage1_Click" />
            <Button Content="goBack" Margin="10" Click="goBack_Click" />
            <Button Content="goForward" Margin="10" Click="goForward_Click" />
            <Button Content="reflesh" Margin="10" Click="reflesh_Click" />
        </UniformGrid>

        <Viewbox>
            <Label Content="Page2" MouseDoubleClick="Label_MouseDoubleClick" />
        </Viewbox>
    </DockPanel>
</Page>

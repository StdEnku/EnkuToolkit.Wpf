<UserControl x:Class="Sandbox.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sandbox.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:et="https://github.com/StdEnku/EnkuToolkit"
             xmlns:vm="clr-namespace:Sandbox.ViewModels"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             DataContext="{et:DiProvider vm:HomeViewModel}"
             d:DataContext="{d:DesignInstance vm:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox>
        <Label Content="{Binding Text}" />
    </Viewbox>
</UserControl>

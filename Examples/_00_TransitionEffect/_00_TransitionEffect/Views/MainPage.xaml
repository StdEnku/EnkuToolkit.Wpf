<Page x:Class="_00_TransitionEffect.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_00_TransitionEffect.Views"
      xmlns:et="https://github.com/StdEnku/EnkuToolkit"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:vm="clr-namespace:_00_TransitionEffect.ViewModels"
      DataContext="{et:ViewModelProvider {x:Type vm:MainPageViewModel}}"
      d:DataContext="{d:DesignInstance {x:Type vm:MainPageViewModel}}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <DockPanel LastChildFill="True">
        <Button Content="Navigate" Margin="20" DockPanel.Dock="Bottom" Command="{Binding ClickedCommand}" />

        <StackPanel VerticalAlignment="Center" Margin="30">
            <Label Content="Enter the string you wish to pass to the next screen." />
            <TextBox Text="{Binding Text}" />
        </StackPanel>
    </DockPanel>
</Page>
